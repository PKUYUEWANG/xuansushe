<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5DEB3"
    tools:context=".SelectPerson">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="10dp"
            android:text="剩余床位信息："
            android:textSize="30dp"
            android:textColor="#160201"
            android:layout_marginLeft="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10sp"
                android:layout_marginLeft="15sp"
                android:gravity="center_vertical"
                android:text="5号楼"
                android:textSize="20sp"
                android:textColor="#160202"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/building5"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20sp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="200个"
                android:textSize="20sp"
                android:textColor="#160202"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
        </RelativeLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10sp"
                android:layout_marginLeft="15sp"
                android:gravity="center_vertical"
                android:text="8号楼"
                android:textSize="20sp"
                android:textColor="#160202"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/building8"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20sp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="0个"
                android:textSize="20sp"
                android:textColor="#160202"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
        </RelativeLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10sp"
                android:layout_marginLeft="15sp"
                android:gravity="center_vertical"
                android:text="9号楼"
                android:textSize="20sp"
                android:textColor="#160202"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/building9"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20sp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="0个"
                android:textSize="20sp"
                android:textColor="#160202"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
        </RelativeLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10sp"
                android:layout_marginLeft="15sp"
                android:gravity="center_vertical"
                android:text="13号楼"
                android:textSize="20sp"
                android:textColor="#160202"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/building13"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20sp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="100个"
                android:textSize="20sp"
                android:textColor="#160202"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
        </RelativeLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10sp"
                android:layout_marginLeft="15sp"
                android:gravity="center_vertical"
                android:text="14号楼"
                android:textSize="20sp"
                android:textColor="#160202"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/building14"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20sp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="100个"
                android:textSize="20sp"
                android:textColor="#160202"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="10sp"
            android:gravity="center_vertical"
            android:text="请选择办理人数："
            android:textColor="#160202"
            android:textSize="30sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/deal_with_personno"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></ListView>
</RelativeLayout>
